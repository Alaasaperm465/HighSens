using System;
using System.IO;
using Microsoft.EntityFrameworkCore;
using Microsoft.EntityFrameworkCore.Design;
using Microsoft.Extensions.Configuration;

namespace InfraStructure.Context
{
    /// <summary>
    /// Design-time factory for EF Core tools. Reads connection string from appsettings.json
    /// (searches current directory and a few parent directories) and configures the provider.
    /// </summary>
    public class DBContextFactory : IDesignTimeDbContextFactory<DBContext>
    {
        public DBContext CreateDbContext(string[] args)
        {
            // Start from current directory (tools normally run from project or solution folder)
            var basePath = Directory.GetCurrentDirectory();

            var config = BuildConfiguration(basePath);

            var connectionString = config.GetConnectionString("DefaultConnection");

            var optionsBuilder = new DbContextOptionsBuilder<DBContext>();

            if (string.IsNullOrWhiteSpace(connectionString))
            {
                // If no connection string is found, fall back to an in-memory provider so tools can still function
                optionsBuilder.UseInMemoryDatabase("DesignTimeDB");
            }
            else
            {
                // Use SQL Server for design-time migrations; ensure your Infrastructure project has the
                // Microsoft.EntityFrameworkCore.SqlServer package referenced.
                optionsBuilder.UseSqlServer(connectionString, b => b.MigrationsAssembly(typeof(DBContext).Assembly.FullName));
            }

            return new DBContext(optionsBuilder.Options);
        }

        private static IConfigurationRoot BuildConfiguration(string startDirectory)
        {
            var dir = new DirectoryInfo(startDirectory);

            // Try the current directory and ascend up to 6 levels to find appsettings.json
            for (int i = 0; i < 6 && dir != null; i++)
            {
                try
                {
                    var builder = new ConfigurationBuilder()
                        .SetBasePath(dir.FullName)
                        .AddJsonFile("appsettings.json", optional: true, reloadOnChange: false)
                        .AddJsonFile("appsettings.Development.json", optional: true, reloadOnChange: false)
                        .AddEnvironmentVariables();

                    var config = builder.Build();

                    // If we found a connection string, return it immediately
                    if (!string.IsNullOrWhiteSpace(config.GetConnectionString("DefaultConnection")))
                        return config;

                    // otherwise move up
                    dir = dir.Parent;
                }
                catch
                {
                    dir = dir?.Parent;
                }
            }

            // Final fallback: build from the original start directory (files may be missing but we still return a configuration)
            return new ConfigurationBuilder()
                .SetBasePath(startDirectory)
                .AddEnvironmentVariables()
                .Build();
        }
    }
}
