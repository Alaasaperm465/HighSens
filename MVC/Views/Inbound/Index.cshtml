@model IEnumerable<MVC.ViewModels.Inbound.InboundListVM>
@{
    ViewData["Title"] = "Inbounds";
}
<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">Inbound Documents</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary d-md-none" href="#" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar"><i class="bi bi-list"></i></a>
            <a class="btn btn-primary" asp-action="Create">New Inbound</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-2 p-sm-3">
            <div class="table-responsive">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Client</th>
                            <th class="d-none d-sm-table-cell">Created At</th>
                            <th>Lines</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Id</td>
                                <td class="align-middle">@item.ClientName</td>
                                <td class="align-middle d-none d-sm-table-cell">@item.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td class="align-middle">@item.LinesCount</td>
                                <td class="align-middle text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>