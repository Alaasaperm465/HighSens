@model MVC.ViewModels.Inbound.InboundDetailsVM
@{
    ViewData["Title"] = "Inbound Details";
}
<div class="container mt-4">
    <h2>Inbound #@Model.Id</h2>
    <div class="mb-3">
        <strong>Client:</strong> @Model.ClientName<br />
        <strong>Created:</strong> @Model.CreatedAt.ToLocalTime().ToString("g")
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Section</th>
                <th>Cartons</th>
                <th>Pallets</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Details)
            {
                <tr>
                    <td>@d.ProductId</td>
                    <td>@d.SectionId</td>
                    <td>@d.Cartons</td>
                    <td>@d.Pallets</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">Totals</th>
                <th>@Model.TotalCartons</th>
                <th>@Model.TotalPallets</th>
            </tr>
        </tfoot>
    </table>

    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>