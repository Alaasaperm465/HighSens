@model HighSens.Domain.Client

@{
    ViewData["Title"] = "إضافة عميل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-wrapper {
        max-width: 550px;
        margin: auto;
        margin-top: 40px;
    }

    .glass-card {
        backdrop-filter: blur(14px);
        background: rgba(255,255,255,.7);
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,.3);
        box-shadow: 0 8px 32px rgba(0,0,0,.07);
        padding: 35px;
        transition: .3s;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 40px rgba(0,0,0,.12);
        }

    .form-control {
        border-radius: 14px;
        padding: 12px 18px;
    }

    .form-floating label {
        padding: 12px 18px;
    }

    .submit-btn {
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: 500;
        background: linear-gradient(135deg,#4e73df,#224abe);
        border: none;
        transition: .25s;
    }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,.15);
        }

    .back-link {
        text-decoration: none;
        font-size: 14px;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .fade-in {
        animation: fadeIn .6s ease-in-out;
    }
     
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="container-fluid fade-in">

    <div class="form-wrapper">
        <div class="glass-card">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3 class="fw-bold mb-1">إضافة عميل جديد</h3>
                    <div class="text-muted small">قم بإدخال بيانات العميل لإضافته إلى النظام</div>
                </div>
                <a asp-controller="Clients" asp-action="Index" class="back-link text-primary">
                    <i class="bi bi-arrow-right"></i> رجوع
                </a>
            </div>

            <form method="post" novalidate>

                <div class="form-floating mb-4">
                    <input asp-for="Name"
                           class="form-control"
                           placeholder="اسم العميل"
                           required />
                    <label asp-for="Name">اسم العميل</label>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn submit-btn text-white">
                        <i class="bi bi-check-circle me-2"></i>
                        إضافة العميل
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

<script>
    // زرار Loading Effect
    document.querySelector("form").addEventListener("submit", function () {
        let btn = document.querySelector(".submit-btn");
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> جاري الحفظ...';
        btn.disabled = true;
    });
</script>
