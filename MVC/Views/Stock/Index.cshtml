@model MVC.ViewModels.Stock.StockIndexVM
@{
    ViewData["Title"] = "HighSens — Stock Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-3">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0">المخزون</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm p-3">
                <form method="get" id="clientFilterForm" class="d-flex flex-column flex-sm-row gap-2 align-items-start align-items-sm-center">
                    <div class="me-2">
                        <label class="form-label d-block">العميل</label>
                        <select name="clientId" class="form-select" onchange="document.getElementById('clientFilterForm').submit()">
                            <option value="">-- العميل --</option>
                            @foreach(var c in Model.Clients)
                            {
                                var isSelected = Model.SelectedClientId.HasValue && Model.SelectedClientId.Value.ToString() == c.Value;
                                <option value="@c.Value" selected="@(isSelected ? "selected" : null)">@c.Text</option>
                            }
                        </select>
                    </div>
                    <div class="ms-auto text-muted small">
                        <span class="badge bg-info text-dark">@Model.Stocks.Count</span> الكمية
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (!Model.SelectedClientId.HasValue)
                    {
                        <div class="text-muted">اختر العميل لعرض المخزون</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>العميل</th>
                                        <th>المنتج</th>
                                        <th>المخزن</th>
                                        <th class="text-end">عدد الكرتون</th>
                                        <th class="text-end">عدد البالتات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var s in Model.Stocks)
                                    {
                                        <tr>
                                            <td>@s.ClientName</td>
                                            <td>@s.ProductName</td>
                                            <td>@s.SectionName</td>
                                            <td class="text-end">@s.Cartons</td>
                                            <td class="text-end">@s.Pallets</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
