@model HighSens.Domain.Product
@{
    ViewData["Title"] = "اضافة منتج";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">اضافة منتج</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">الاسم</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        @* لو عايز تضيف checkbox لاحقًا:
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive">نشط</label>
        </div>
        *@

        <button type="submit" class="btn btn-primary">اضافة</button>
    </form>
</div>
